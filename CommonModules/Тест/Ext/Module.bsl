	Структура = Новый Структура("Первый, Второй, Третий", "Первый", 2, 3);
	Структура.Вставить("Четвертый", "Четвертый");
	Структура.Вставить("Пятый", 5);
	
	//Доступ по Элементу
	Сообщить("Второй элемент - " + Структура["Второй"]);
	
	//Количество элементов
	Сообщить("Кол-во эл - " + Структура.Количество() + " шт");
	
	//Удаление элемента
	Структура.Удалить("Второй");
	Сообщить("Кол-во эл - " + Структура.Количество()); 
	
	//Изменение элемента
	Структура.Вставить("Третий", "Третий");	
	
	//Вывод элементов
	Для Каждого Эл Из Структура Цикл
		Сообщить(Эл.Ключ + " - " + Эл.Значение);
	КонецЦикла;
	
